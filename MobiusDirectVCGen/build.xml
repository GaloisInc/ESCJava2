<project name="DirectVCGen" default="clops-gen" basedir=".">
  <description>DirectVCGen Build File</description>

  <property name="java-target-version" value="1.6"/>
		
  <property name="dist"  location="dist"/>
  <property name="lib"  location="lib"/>
  <property name="src" location="src"/>
  <property name="build" location="bin"/>
  <property name="deps-bico" value="clops-runtime.jar bcel-5.2.jar bico.jar"/>
  <property name="deps-escj" value="javac.jar escjava.jar Javafe2.0.5.jar junit.jar" />
  <path id="runtime.path">
	<filelist dir="${lib}" files="clops-runtime.jar"/>
  	<filelist dir="${lib}" files="bcel-5.2.jar"/>
  	<filelist dir="${lib}" files="javac.jar"/>
  	<filelist dir="${lib}" files="escjava.jar"/>
  	<filelist dir="${lib}" files="Javafe2.0.5.jar"/>
  	<filelist dir="${lib}" files="junit.jar"/>
  	<filelist dir="${lib}" files="bico.jar"/>
  </path>
	
  <!-- Clops related stuff -->
  <property name="clops-file" location="clops/dvcg.clops"/>
  <property name="clops-target" location="clops/mobius/directVCGen/clops"/>
  <property name="clops-pkg" value="mobius.directVCGen.clops"/>
  <property name="clops-src" location="clops"/>
  <property name="clops-html-template" location="clops/mobius.vm"/>
  <property name="clops-html-output" location="clops/dvcg.html"/>
  <path id="clops.path">
	<filelist dir="${lib}" files="clops.jar"/>
    <file name="stringtemplate-3.2.jar"/>
	<file name="velocity-1.6.1.jar"/>
	<file name="velocity-1.6.1-dep.jar"/>
  </path>


  
  <target name="init">
    <echo message="Creating timestamp"/>
    <tstamp/>
    <mkdir dir="${build}"/>
  	<mkdir dir="${clops-target}"/>
  </target>
	
  <target name="compile-clops" depends="init,clops-gen" description="Compile the clops related source">
    <javac srcdir="${clops-src}" 
           destdir="${build}" 
           target="${java-target-version}"
           debug="yes">
      <compilerarg value="-Xlint:all"/>
      <classpath refid="runtime.path"/>
    </javac>
  </target>
	
  <target name="compile-dvcg" depends="init" description="Compile the main source">
    <javac srcdir="${src}" 
           destdir="${build}" 
           target="${java-target-version}"
           debug="yes">
      <compilerarg value="-Xlint:all"/>
      <classpath refid="runtime.path"/>
    </javac>
  </target>
	
  <target name="compile" depends="compile-dvcg" description="compile the source" />
  
  <target name="clops-gen"  depends="init" description="Generates clops files">
  	<echo message="Using ${clops-file}"/>
    <java fork="yes" classname="ie.ucd.clops.dsl.Main">
      <assertions>
        <enable/>
      </assertions>
      <classpath refid="clops.path"/>
      <arg value="-v"/>
      <arg value="-d=${clops-html-output}"/>
      <arg value="-c"/>
      <arg value="${clops-html-template}"/> 
      <arg value="-p"/>
      <arg value="${clops-pkg}"/>
      <arg value="-o"/>
      <arg value="${clops-target}"/>
      <arg value="${clops-file}"/>
    </java>
  </target>
  <target name="dist-jars" depends="init" description="Generate the distribution">
    <mkdir dir="${dist}"/>
    <copy todir="${dist}">
    	<fileset dir="${lib}/" includes="${deps-bico}"/>
    	<fileset dir="${lib}/" includes="${deps-escj}"/>
    </copy>
  </target>
	
  <target name="dist-dvcg" depends="compile,dist-jars" description="Generate the distribution for the DirectVCGen">
    <jar jarfile="${dist}/DirectVCGen.jar">
      <fileset dir="${build}" includes="mobius/**"/>
      <manifest>
      	<attribute name="Main-Class" value="mobius.directVCGen.Main" />
        <attribute name="Class-Path" value="${deps-bico} ${deps-escj}" />
      </manifest>
    </jar> 	
  </target>

  <target name="dist-bico+" depends="compile,dist-jars" description="Generate the distribution for the Bico+">
    <jar jarfile="${dist}/bico+.jar">
      <fileset dir="${build}" includes="mobius/**"/>
      <manifest>
      	<attribute name="Main-Class" value="mobius.directVCGen.bico.Main" />
        <attribute name="Class-Path" value="${deps-bico} ${deps-escj}" />
      </manifest>
    </jar> 	
  </target>

  <target name="dist" depends="dist-dvcg,dist-bico+" description="Generate the distribution" />

  <target name="clean-build" description="Clean up the build">
	 <delete dir="${build}"/>
	 <delete dir="${dist}"/>
  </target>
  
</project>