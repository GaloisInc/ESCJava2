<project name="RCC" default="dist" basedir=".">
	<description>
        a Race Condition Checker for Java
    </description>

	<!-- set global properties for this build -->
	<property name="src" location="java" />
	<property name="build" location="classes" />
	<property name="dist" location="dist" />
	<property name="doc" location="doc" />
	<property name="version" value="0.3.0"/>
	<path id="classpath"><fileset dir="lib" includes="*.jar" /></path>

	<!-- Compile and distribution targets -->
	<target name="init">
		<tstamp />
		<mkdir dir="${build}" />
	</target>

	<target name="compile" depends="init" description="compile the source ">
		<javac srcdir="${src}" destdir="${build}" deprecation="yes" optimize="yes">
			<exclude name="rcc/test/**" />
			<exclude name="rcc/parser/test/**" />
			<exclude name="rccwizard/test/**" />
			<!-- TODO: the testfiles should be moved and the excludes above removed -->
			<classpath refid="classpath" /> 
		</javac>
	</target>
	
	<target name="doc" description="generate javadoc">
		<javadoc destdir="${doc}" sourcepath="${src}">
			<package name="rcc.*" />
			<excludepackage name="rcc.test.*" />
			<excludepackage name="rcc.parser.test.*" />
		</javadoc>
	</target>

	<target name="dist" depends="compile" description="generate the distribution">
		<mkdir dir="${dist}/lib" />
		<jar jarfile="${dist}/lib/rcc-${version}.jar" basedir="${build}" />
	</target>
	
	
	<!-- Test targets -->
	<target name="unit_test" depends="compile" description="run unit tests">
		<!-- TODO: Write unit tests. -->
	</target>
	
	<target name="regression_test" depends="compile" description="run regression tests">
		<exec executable="${src}/rcc/test/rtestall" dir="${src}/rcc/test" />
	    <!-- TODO: Move the regression tests to the appropriate place -->
	</target>
	
	<target name="test" depends="unit_test, regression_test" description="run all tests"></target>

	<!-- Cleanup targets -->
	<target name="clean" description="clean up">
		<delete dir="${build}" />
		<delete dir="${dist}" />
		<delete dir="${doc}" />
	</target>
</project>

